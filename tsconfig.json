{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "rootDir": "./source",
    "outDir": "./distribution",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "./source/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
